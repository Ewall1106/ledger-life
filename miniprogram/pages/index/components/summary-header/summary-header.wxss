/* Category Filter Styles */
.category-filter {
  background: #62b37a;
  padding: 32rpx;
}

.category-button {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-text {
  font-size: 28rpx;
  color: white;
}

/* Monthly Summary Styles */
.monthly-summary {
  background: #62b37a;
  padding: 20rpx 32rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.month-selector {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.month-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.summary-amounts {
  display: flex;
  gap: 32rpx;
}

.summary-item {
  font-size: 28rpx;
  color: white;
} 