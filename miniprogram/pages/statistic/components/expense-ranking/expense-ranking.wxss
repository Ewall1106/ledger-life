.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  background: white;
  margin-top: 20rpx;
}

.ranking-container {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.ranking-list {
  padding: 0;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.ranking-item:last-child {
  border-bottom: none;
}

.ranking-left {
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.ranking-number {
  width: 32rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  text-align: center;
}

.ranking-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f9ff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ranking-middle {
  flex: 1;
  margin-right: 20rpx;
}

.ranking-category {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.ranking-description {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.ranking-right {
  text-align: right;
}

.ranking-amount {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.ranking-date {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.view-all-container {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.view-all-btn {
  border-color: #62b37a !important;
  color: #62b37a !important;
  font-size: 28rpx !important;
} 